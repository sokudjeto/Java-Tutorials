
public class FirstApp {

	public static void main(String[] args) {
		//System.out.println("Hello World");
		int myNumber; //this is a variable, its like a space or box where data like integers can be stored. 
						//... it is also called declaring of a variable
		myNumber = 88; // this initializing the variable myNumber to the value 88
		
		//note: declaration and initializing can be done on the same line< "int myNumber = 88;">
			
		short myShort = 30;
		
		long myLong = 1000;
		
		double myDouble = 4.6674;
		
		float myFloat = 4.3222f;
		
		char myChar = 'y';
		
		boolean myBoolean = true;
		
		System.out.println(myNumber);
		System.out.println(myShort);
		System.out.println(myLong);
		System.out.println(myDouble);
		System.out.println(myFloat);
		System.out.println(myChar);
		System.out.println(myBoolean);
	
	}

}
